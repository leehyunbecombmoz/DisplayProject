<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="8dp"
    android:id="@+id/ll_dialog_bg"
    android:layout_marginRight="8dp"
    android:paddingLeft="@dimen/len_4"
    android:paddingRight="@dimen/len_4"
    android:background="@drawable/bg_conrners_often_dialog"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="配置信息"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:padding="15dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="IP地址:"
                android:textColor="@color/black_alpha_112"
                android:textSize="16sp" />

            <TextView
                android:layout_weight="5"
                android:id="@+id/tvIpAddress"
                android:layout_marginLeft="@dimen/len_20"
                android:layout_width="0dp"
                android:layout_height="@dimen/len_40"
                android:gravity="center"
                android:textSize="@dimen/font_18" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="端口配置："
                android:textColor="@color/black_alpha_112"
                android:textSize="16sp" />

            <EditText
                android:layout_weight="5"
                android:inputType="number"
                android:layout_marginLeft="@dimen/len_20"
                android:id="@+id/tv_port"
                android:layout_width="0dp"
                android:layout_height="@dimen/len_40"
                android:background="@color/trans"
                android:gravity="center"
                android:hint="输入端口号"
                android:textSize="@dimen/font_18" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/len_4"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_cance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_16" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_color"></View>


        <TextView
            android:id="@+id/tv_suer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="#228FFF"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>
